{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",

    "rootDir": ".",
    "outDir": "../../../dist/common",
    "target": "esnext",

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,

    "allowJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "**/*",
    "data/*.json"
  ],
  "exclude": []
}
